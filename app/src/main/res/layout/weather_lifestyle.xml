<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:contentPadding="14dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="生活指数"
                android:textSize="12sp"
                style="@style/forecasttext"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="2dp"
                    android:id="@+id/iv_air"
                    android:scaleType="fitCenter"
                    android:src="@drawable/air"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/tv_air_t"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_air"
                    android:text="化妆指数  保湿"
                    android:textColor="#3c5f81"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_air_b"
                    android:layout_marginTop="4dp"
                    android:textColor="#5d707f"
                    android:textSize="12sp"
                    android:text="天气寒冷，多补水，选用滋润保湿型化妆品，使用润唇膏。"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_air_t"
                    android:layout_toRightOf="@id/iv_air"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="#3c5f81"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_flu"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/flu"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/tv_flu_t"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_flu"
                    android:text="化妆指数  保湿"
                    android:textColor="#3c5f81"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_flu_b"
                    android:layout_marginTop="4dp"
                    android:textColor="#5d707f"
                    android:textSize="12sp"
                    android:text="天气寒冷，多补水，选用滋润保湿型化妆品，使用润唇膏。"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_flu_t"
                    android:layout_toRightOf="@id/iv_flu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="#3c5f81"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_cw"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cw"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/tv_cw_t"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_cw"
                    android:text="化妆指数  保湿"
                    android:textColor="#3c5f81"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_cw_b"
                    android:layout_marginTop="4dp"
                    android:textColor="#5d707f"
                    android:textSize="12sp"
                    android:text="天气寒冷，多补水，选用滋润保湿型化妆品，使用润唇膏。"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_cw_t"
                    android:layout_toRightOf="@id/iv_cw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="#3c5f81"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_drsg"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/drsg"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/tv_drsg_t"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_drsg"
                    android:text="化妆指数  保湿"
                    android:textColor="#3c5f81"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_drsg_b"
                    android:layout_marginTop="4dp"
                    android:textColor="#5d707f"
                    android:textSize="12sp"
                    android:text="天气寒冷，多补水，选用滋润保湿型化妆品，使用润唇膏。"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_drsg_t"
                    android:layout_toRightOf="@id/iv_drsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="#3c5f81"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_uv"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/uv"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/tv_uv_t"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_uv"
                    android:text="化妆指数  保湿"
                    android:textColor="#3c5f81"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_uv_b"
                    android:layout_marginTop="4dp"
                    android:textColor="#5d707f"
                    android:textSize="12sp"
                    android:text="天气寒冷，多补水，选用滋润保湿型化妆品，使用润唇膏。"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_uv_t"
                    android:layout_toRightOf="@id/iv_uv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="#3c5f81"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_sport"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sport"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/tv_sport_t"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_sport"
                    android:text="化妆指数  保湿"
                    android:textColor="#3c5f81"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_sport_b"
                    android:layout_marginTop="4dp"
                    android:textColor="#5d707f"
                    android:textSize="12sp"
                    android:text="天气寒冷，多补水，选用滋润保湿型化妆品，使用润唇膏。"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_sport_t"
                    android:layout_toRightOf="@id/iv_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>